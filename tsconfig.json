{
  "compilerOptions": {
    "jsx": "react",
    "module": "commonjs",
    "outDir": "dist",
    "lib": [ "dom", "es2018" ],
    "sourceMap": true,
    "esModuleInterop": true,
    "removeComments": true,

    "strict": true,
    "noUnusedLocals": true,
    "forceConsistentCasingInFileNames": true,
  },
  "include": [
    "src/**/*",
    "test/**/*",
  ]
}
