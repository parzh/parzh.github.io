{
  "compilerOptions": {
    "jsx": "react",
    "module": "commonjs",
    "outDir": "dist",
    "allowJs": true, // TODO: remove
    "checkJs": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "removeComments": true,

    "strict": true,
    "noUnusedLocals": true,
    "forceConsistentCasingInFileNames": true,
  },
  "include": [
    "src/**/*",
    "test/**/*",
  ]
}
