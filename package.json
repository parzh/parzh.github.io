{
  "name": "@parzh/parzh.github.io",
  "version": "0.0.1",
  "description": "",
  "private": true,
  "scripts": {
    "clean": "rimraf dist/*",
    "prebuild": "npm run clean",
    "build": "webpack --config=webpack/webpack.config.prod.ts",
    "test": "jest",
    "test:cov": "npm test -- --collect-coverage",
    "lint": "eslint --ext .ts,.tsx src webpack",
    "dev": "webpack-dev-server --config=webpack/webpack.config.dev.ts --open"
  },
  "repository": "github:parzh/parzh.github.io",
  "keywords": [],
  "author": "Dima Parzhitsky <parzhitsky@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/parzh/parzh.github.io/issues"
  },
  "homepage": "https://github.com/parzh/parzh.github.io#readme",
  "jest": {
    "verbose": true,
    "rootDir": ".",
    "roots": [
      "<rootDir>/src",
      "<rootDir>/webpack"
    ],
    "transform": {
      "\\.tsx?$": "ts-jest"
    },
    "setupFiles": [
      "<rootDir>/test/.use-enzyme.ts",
      "<rootDir>/test/.forbid-fetch.ts"
    ],
    "testMatch": [
      "**/*.spec.ts?(x)"
    ],
    "moduleNameMapper": {
      "\\.css$": "<rootDir>/test/.mock-static-assets.ts"
    },
    "collectCoverageFrom": [
      "**/*.ts?(x)",
      "!**/index.tsx",
      "!**/*.spec.ts?(x)",
      "!**/webpack.*.ts"
    ],
    "coverageDirectory": "<rootDir>/coverage",
    "cacheDirectory": "<rootDir>/.cache/jest",
    "errorOnDeprecated": true
  },
  "devDependencies": {
    "@types/enzyme": "3.10.4",
    "@types/enzyme-adapter-react-16": "1.0.5",
    "@types/html-webpack-plugin": "3.2.1",
    "@types/jest": "24.9.0",
    "@types/node": "13.1.4",
    "@types/react": "16.9.17",
    "@types/react-dom": "16.9.4",
    "@types/webpack": "4.41.1",
    "@types/webpack-dev-server": "3.9.0",
    "@types/webpack-merge": "4.1.5",
    "@typescript-eslint/eslint-plugin": "2.15.0",
    "@typescript-eslint/parser": "2.15.0",
    "css-loader": "3.4.1",
    "enzyme": "3.11.0",
    "enzyme-adapter-react-16": "1.15.2",
    "eslint": "6.8.0",
    "eslint-plugin-react": "7.17.0",
    "eslint-plugin-react-hooks": "2.3.0",
    "html-webpack-plugin": "3.2.0",
    "jest": "24.9.0",
    "rimraf": "3.0.0",
    "style-loader": "1.1.2",
    "ts-jest": "24.3.0",
    "ts-loader": "6.2.1",
    "ts-node": "8.5.4",
    "typescript": "3.7.4",
    "webpack": "4.41.5",
    "webpack-cli": "3.3.10",
    "webpack-dev-server": "3.10.1",
    "webpack-merge": "4.2.2"
  },
  "dependencies": {
    "react": "16.12.0",
    "react-dom": "16.12.0"
  }
}
